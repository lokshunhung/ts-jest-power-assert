{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "outDir": "./tmp/",
        "allowJs": true,
        "checkJs": true,

        "downlevelIteration": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true
    }
}
